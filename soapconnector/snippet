CustomerWsClientApplication.java
package com.june.apps;
 
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import com.june.apps.schemas.customer.GetUserRequest;
import com.june.apps.schemas.school.GetUserResponse;
 
@SpringBootApplication
public class CustomerWsClientApplication {
 
    public static void main(String[] args) {
        SpringApplication.run(CustomerWsClientApplication.class, args);
    }
     
    @Bean
    CommandLineRunner lookup(SOAPConnector soapConnector) {
        return args -> {
        /*Add customer name here*/
            String name = "";
            if(args.length>0){
                name = args[0];
            }
            GetUserRequest request = new GetUserRequest();
            request.setName(name);
            GetUserResponse response =(GetUserResponse) soapConnector.callWebService("http://localhost:9090/customerWS/users", request);
            System.out.println("Got Response As below ========= : ");
            System.out.println("Name : "+response.getUser().getName());
            System.out.println("Id : "+response.getUser().getCustId());
            System.out.println("OverDrafts : "+response.getUser().getOD());
        };
    }
}
